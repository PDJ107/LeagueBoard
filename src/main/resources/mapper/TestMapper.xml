<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="repository.TestMapper">

    <select id="test" resultType="String">
        SELECT account FROM springTest.test LIMIT 1;
    </select>

    <select id="getUser" parameterType="domain.TestUsers" resultType="Long">
        SELECT id FROM springTest.test WHERE account = #{account} AND password = #{password};
    </select>

    <select id="getUserById" parameterType="Long" resultType="domain.TestUsers">
        SELECT id, account, password FROM springTest.test WHERE id = #{id};
    </select>

    <select id="checkUser" parameterType="domain.TestUsers" resultType="boolean">
        SELECT EXISTS ( SELECT * FROM springTest.test WHERE account = #{account} AND password = #{password});
    </select>

    <select id="checkUserByAccount" parameterType="domain.TestUsers" resultType="boolean">
        SELECT EXISTS ( SELECT * FROM springTest.test WHERE account = #{account});
    </select>

    <select id="checkUserByid" parameterType="Long" resultType="boolean">
        SELECT EXISTS ( SELECT * FROM springTest.test WHERE id = #{id});
    </select>

    <insert id="addUser" parameterType="domain.TestUsers">
        INSERT INTO springTest.test(account, password) VALUE(#{account}, #{password});
    </insert>

</mapper>